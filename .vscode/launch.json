    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "flasky.py",
                "FLASK_DEBUG": "1",
                "FLASK_CONFIG": "development"
            },
            "args": [
                "run",
                "--debugger",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Flask - local network",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "flasky.py",
                "FLASK_DEBUG": "0",
                "FLASK_CONFIG": "production"
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}